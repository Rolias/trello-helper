{
  "name": "trello-helper",
  "version": "2.0.3",
  "engines": {
    "node": ">10.0.0"
  },
  "description": "Simpler interface for setting and retrieving data using the Trello API",
  "main": "main.js",
  "scripts": {
    "start": "run-s start:src",
    "start:all": "run-p security-check start:src lint:watch test:watch",
    "start:src": "node src/main.js",
    "start:loop": "nodemon src/main.js",
    "security-check": "npm audit",
    "lint": "esw src  --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --use_strict 'src/**/*.test.js' ",
    "test:int": "mocha  --no-opts --use_strict 'src/**/*.int.js' ",
    "test:watch": "npm run test  -- --watch --reporter min",
    "test:cov": "nyc mocha",
    "test:all": "nyc run-p  'test -- --forbid-only' 'test:int -- --forbid-only'",
    "watch": "run-p lint:watch test:watch",
    "doc": "./node_modules/.bin/jsdoc -c ./jsdoc.config.json main.js src/**/*.js src/*.js ./ReadMe.md",
    "build:ver": "npm version patch  ",
    "build:pub": "npm publish ",
    "build:commit": "git commit --all -m 'build commit'",
    "build:push": "git push",
    "build": "npm-run-all --parallel lint test:all doc    --serial build:commit build:ver build:pub "
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Rolias/trello-helper.git"
  },
  "keywords": [
    "trello",
    "api",
    "helper",
    "custom fields",
    "easy",
    "pluralsight"
  ],
  "author": "Tod Gentille",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Rolias/trello-helper/issues"
  },
  "homepage": "https://github.com/Rolias/trello-helper#readme",
  "mocha": {
    "verbose": true,
    "reporter": "spec"
  },
  "dependencies": {
    "env-create": "^1.0.9",
    "moment": "^2.24.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "winston": "x"
  },
  "devDependencies": {
    "@types/node": "^11.13.0",
    "chai": "x",
    "eslint": "^5.16.0",
    "eslint-watch": "x",
    "jsdoc": "^3.5.5",
    "mocha": "x",
    "nodemon": "^1.18.10",
    "npm-run-all": "x",
    "nyc": "x",
    "sinon": "^7.3.1"
  }
}