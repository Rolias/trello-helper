{
  "name": "trello-helper",
  "version": "1.0.6",
  "engines": {
    "node": ">10.0.0"
  },
  "description": "Simpler interface for setting and retrieving data using the Trello API",
  "main": "main.js",
  "scripts": {
    "start": "run-s start:src",
    "start:all": "run-p security-check start:src lint:watch test:watch",
    "start:src": "node src/main.js",
    "start:loop": "nodemon src/main.js",
    "security-check": "npm audit",
    "lint": "esw src  --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha  --reporter spec \"src/**/*.test.js\"",
    "test:int": "mocha  \"src/**/*.test.int.js\"",
    "test:watch": "npm run test -- --watch",
    "test:cov": "nyc mocha \"src/**/*.test.js\"",
    "test:all": "nyc run-p test test:int",
    "watch": "run-p lint:watch test:watch",
    "doc": "./node_modules/.bin/jsdoc -c ./jsdoc.config.json main.js src/**/*.js src/*.js ./ReadMe.md",
    "version": "npm version patch -m 'bump patch' ",
    "publish": "npm publish ",
    "build:commit": "git commit --all -m 'build commit'",
    "build:push": "git push",
    "build": "run-s lint test:cov security-check doc  build:commit version  build:commit  publish"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Rolias/trello-helper.git"
  },
  "keywords": [
    "trello",
    "api"
  ],
  "author": "Tod Gentille",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rolias/trello-helper/issues"
  },
  "homepage": "https://github.com/Rolias/trello-helper#readme",
  "dependencies": {
    "env-create": "^1.0.3",
    "moment": "^2.24.0",
    "node-trello": "^1.3.0",
    "trello": "^0.9.1",
    "winston": "x"
  },
  "devDependencies": {
    "@types/node": "x",
    "chai": "x",
    "eslint": "x",
    "eslint-watch": "x",
    "jsdoc": "^3.5.5",
    "mocha": "x",
    "nodemon": "^1.18.10",
    "npm-run-all": "x",
    "nyc": "x",
    "sinon": "x"
  }
}