{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "checkJs": false,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "watch": false,

    // "experimentalDecorators": true,
    "strictNullChecks": true
  },
  "include": ["./**/*"]
}
